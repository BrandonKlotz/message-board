
<div class="message">
<% flash.each do |key, value| %>

  <% if key == "alert" %>
    <div class="ui warning message">
     <a class="close" href="#">&times</a>
     <center><strong><%= value %></strong></center>
    </div>
  <% else %>
    <div class="ui message">
      <a class="close" href="#">&times</a>
      <center><strong><%= value %></strong></center>
    </div>
  <% end %>

<% end %>
</div>
