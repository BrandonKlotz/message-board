<!DOCTYPE html>
<html>
  <head>
    <title>MessageBoard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg">
    <div class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Message Board", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li ><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-item nav-link" %></li>
          <% else %>
            <li class="nav-item nav-link"><%= link_to "Sign Up", new_user_registration_path %></li>
            <li class="nav-item nav-link"><%= link_to "Log In", new_user_session_path %></li>
          <% end %>
        </ul>
        <% if user_signed_in? %>
          <p><%= link_to "New Message", new_message_path, class: "navbar-right navbar-text navbar-link" %></p>
        <% end %>
      </div>
    </div>

    <%= yield %>

    <footer>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </footer>
  </body>
</html>
